rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // COLLECTIONS DO SISTEMA DE RANKED
    // ============================================
    
    // Players - Perfis e estatísticas dos jogadores
    match /players/{playerId} {
      // Leitura pública para leaderboards
      allow read: if true;
      // Escrita apenas via Admin SDK (backend)
      allow write: if false;
      
      // Histórico de partidas do jogador (subcollection)
      match /matches/{matchId} {
        allow read: if true;
        allow write: if false;
      }
    }
    
    // Matches - Partidas completas com todos os jogadores
    match /matches/{matchId} {
      // Leitura pública para histórico e estatísticas
      allow read: if true;
      // Escrita apenas via Admin SDK
      allow write: if false;
    }
    
    // Kills - Registro de kills individuais
    match /kills/{killId} {
      // Leitura pública para análises
      allow read: if true;
      // Escrita apenas via Admin SDK
      allow write: if false;
    }
    
    // Events - Eventos genéricos (chat, weapon_change, etc)
    match /events/{eventId} {
      // Leitura restrita (privado)
      allow read: if false;
      // Escrita apenas via Admin SDK
      allow write: if false;
    }
    
    // ============================================
    // COLLECTIONS ANTIGAS (MANTER COMPATIBILIDADE)
    // ============================================
    
    // Meta collection for app-wide sequences/counters
    match /meta/{docId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // Pending confirmations collection
    match /pendingConfirmations/{confirmId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
